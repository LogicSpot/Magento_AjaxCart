<?xml version="1.0" ?>
<config>
    <modules>
        <LogicSpot_AjaxCart>
            <version>0.0.1</version>
        </LogicSpot_AjaxCart>
    </modules>
    <global>
        <blocks>
            <ajaxcart>
                <class>LogicSpot_AjaxCart_Block</class>
            </ajaxcart>
            <catalog>
                <rewrite>
                    <product_view_type_configurable>LogicSpot_AjaxCart_Block_Catalog_Product_View_Type_Configurable</product_view_type_configurable>
                </rewrite>
            </catalog>
        </blocks>
        <models>
            <ajaxcart>
                <class>LogicSpot_AjaxCart_Model</class>
            </ajaxcart>
        </models>
        <helpers>
            <ajaxcart>
                <class>LogicSpot_AjaxCart_Helper</class>
            </ajaxcart>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <ajaxcart>
                    <file>logicspot/ajaxcart/ajaxcart.xml</file>
                </ajaxcart>
            </updates>
        </layout>
        <routers>
            <ajaxcart>
                <use>standard</use>
                <args>
                    <module>LogicSpot_AjaxCart</module>
                    <frontName>ajaxcart</frontName>
                </args>
            </ajaxcart>
        </routers>
    </frontend>
</config>
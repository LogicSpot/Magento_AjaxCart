<?xml version="1.0"?>
<config>
    <sections>
        <logicspot_ajaxcart>
            <label>AjaxCart</label>
            <tab>logicspot_core</tab>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <ajaxcart>
                    <label>AjaxCart Configuration</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>1</sort_order>
                    <fields>
                        <enable>
                            <label>Enable ajax cart</label>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                        </enable>
                        <enable_simple_product_data>
                            <label>Enable Simple Product Data</label>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                        </enable_simple_product_data>
                        <type>
                            <label>Ajax cart type</label>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>ajaxcart/system_config_source_type</source_model>
                            <sort_order>30</sort_order>
                        </type>
                        <inline_notifications>
                            <label>Enable inline notifications</label>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                        </inline_notifications>
                    </fields>
                </ajaxcart>
            </groups>
        </logicspot_ajaxcart>
    </sections>
</config>
<?xml version="1.0" ?>
<layout>
    <default>
        <reference name="head">
            <action method="addItem">
                <type>js_css</type>
                <name>logicspot/ajaxcart.css</name>
            </action>
        </reference>
        <reference name="delayed_js">
            <action method="addJs">
                <script>logicspot/ajaxcart.js</script>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>logicspot/ajaxcart/ajaxcart.js</name>
            </action>
        </reference>
        <reference name="before_body_end">
            <block type="core/template" name="logicspot.ajaxcart" as="ajaxcart" template="logicspot/ajaxcart/element.phtml" after="-"/>
        </reference>
    </default>
    <catalog_product_view>
        <reference name="content">
            <block type="core/text_list" name="json_block" as="jason_block" before="product.info">
                <block type="ajaxcart/catalog_product_view_type_json" name="json" as="json" template="logicspot/ajaxcart/catalog/product/json.phtml"/>
            </block>
        </reference>
    </catalog_product_view>
</layout>